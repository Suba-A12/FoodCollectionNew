
@{
    ViewData["Title"] = "Proceed to Payment";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Proceed to Payment</h2>

    <div class="card shadow p-4 mx-auto" style="max-width: 400px;">
        <p><strong>Amount:</strong> $@ViewBag.Amount</p>

        <form asp-action="CreateCheckoutSession" method="post">
            <input type="hidden" name="bookPickupId" value="@ViewBag.BookPickupId" />
            <button type="submit" class="btn btn-success w-100">
                Pay with Stripe
            </button>
        </form>
    </div>
</div>