@model FoodCollection.Models.Customer

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4">
                <div class="card-header bg-dark text-white d-flex align-items-center">
                    <i class="bi bi-person-circle me-2 fs-4"></i>
                    <h4 class="mb-0">My Profile</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Lname)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Lname)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Fname)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Fname)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-envelope-fill me-1 text-secondary"></i>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-telephone-fill me-1 text-secondary"></i>
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Address)</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-geo-alt-fill me-1 text-secondary"></i>
                            @Html.DisplayFor(model => model.Address)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Edit" asp-route-id="@Model?.CustomerId" class="btn btn-outline-dark">
                        <i class="bi bi-pencil-square me-1"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
