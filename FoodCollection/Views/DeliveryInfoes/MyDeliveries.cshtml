@model IEnumerable<FoodCollection.Models.DeliveryInfo>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Deliveries</h2>
    </div>

    <div class="table-responsive shadow rounded-3">
        <table class="table table-hover align-middle table-striped">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Pickup Date</th>
                    <th>Pickup Event</th>
                    <th>Pickup Address</th>
                    <th>Organization</th>
                    <th>Org Address</th>
                    <th>Delivery Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                            No deliveries assigned yet.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Pickup.Date.ToString("yyyy-MM-dd")</td>
                            <td>@item.Pickup.BookPickup.EventName</td>
                            <td>@item.Pickup.BookPickup.EventAddress</td>
                            <td>@item.Organization.OrganizationName</td>
                            <td>@item.Organization.Address</td>
                            <td>
                                <span class="badge bg-@(item.DeliveryStatus == "Delivered" ? "success" : "warning")">
                                    @item.DeliveryStatus
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item.DeliveryStatus == "Pending")
                                {
                                    <a asp-action="MarkDelivered" asp-route-id="@item.DelilveryInfoId" class="btn btn-sm btn-outline-success" title="Mark Delivered">
                                        <i class="bi bi-check2"></i> Delivered
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No Action</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>