@model FoodCollection.Models.BookPickupDetail

@{
    ViewData["Title"] = "Add Food Item to Booking";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" />

<form asp-action="Create" method="post" id="foodForm">
    <input type="hidden" asp-for="BookPickupId" id="BookPickupId" />

    <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label for="QuantityLeft" class="form-label">Quantity</label>
            <input type="number" id="QuantityLeft" class="form-control" placeholder="0" />
        </div>

        <div class="col-md-3">
            <label for="ExpiryDate" class="form-label">Expiry Date</label>
            <input type="date" id="ExpiryDate" class="form-control" />
        </div>

        <div class="col-md-4">
            <label for="FoodItemId" class="form-label">Food Item</label>
            <select id="FoodItemId" class="form-select">
                <option value="">-- Select Food Item --</option>
                @foreach (var item in ViewBag.FoodItemList)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <button type="button" class="btn btn-success" id="addItemBtn">
                <i class="bi bi-plus-circle"></i> Add
            </button>
        </div>
    </div>

    <!-- List of items -->
    <div id="itemListBox" class="form-control mt-3" style="height:150px; overflow-y:auto;"></div>

    <!-- Hidden container for list -->
    <div id="hiddenInputs"></div>

    <div class="d-grid mt-4">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-lg me-1"></i> Payments
        </button>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    var itemIndex = 0;

    $(document).ready(function () {

        $("#addItemBtn").click(function () {
            var qty = $("#QuantityLeft").val();
            var exp = $("#ExpiryDate").val();
            var foodText = $("#FoodItemId option:selected").text();
            var foodVal = $("#FoodItemId").val();
            var bookPickupId = $("#BookPickupId").val();

            if (!qty || !exp || !foodVal) {
                alert("Please fill all fields before adding.");
                return;
            }

            // Display summary
            var itemHtml = `<div class="d-flex justify-content-between align-items-center border p-1 mb-1 bg-light">
                                <span>${qty} - ${foodText} (Expiry: ${exp})</span>
                                <button type="button" class="btn btn-sm btn-danger removeItem" data-index="${itemIndex}">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            </div>`;

            $("#itemListBox").append(itemHtml);

            // Hidden inputs for model binding
            var hiddenHtml = `
                <input type="hidden" name="details[${itemIndex}].BookPickupId" value="${bookPickupId}" />
                <input type="hidden" name="details[${itemIndex}].QuantityLeft" value="${qty}" />
                <input type="hidden" name="details[${itemIndex}].ExpiryDate" value="${exp}" />
                <input type="hidden" name="details[${itemIndex}].FoodItemId" value="${foodVal}" />
            `;
            $("#hiddenInputs").append(`<div id="hidden-${itemIndex}">${hiddenHtml}</div>`);

            itemIndex++;

            // Clear fields
            $("#QuantityLeft").val("");
            $("#ExpiryDate").val("");
            $("#FoodItemId").val("");
        });

        // Remove item
        $(document).on("click", ".removeItem", function () {
            var index = $(this).data("index");
            $("#hidden-" + index).remove();
            $(this).closest("div").remove();
        });
    });
</script>






