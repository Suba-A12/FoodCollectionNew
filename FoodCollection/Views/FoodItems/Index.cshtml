@model IEnumerable<FoodCollection.Models.FoodItem>

@{
    ViewData["Title"] = "Food Items";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0"><i class="bi bi-basket-fill me-2 text-success"></i>Food Items</h3>
        <a asp-action="Create" class="btn btn-outline-success">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-success">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IsVegetarian)</th>
                            <th>@Html.DisplayNameFor(model => model.FoodType)</th>
                            <th class="text-center" style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="bi bi-exclamation-circle me-1"></i>No food items found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.IsVegetarian)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FoodType)</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.FoodItemId" class="btn btn-sm btn-outline-info me-1" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.FoodItemId" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FoodItemId" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>