@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="https://images.unsplash.com/photo-1502741338009-cac2772e18bc?auto=format&fit=crop&w=600&q=80"
                             alt="Fresh Food Collection" class="img-fluid rounded-circle shadow" style="width: 120px; height: 120px; object-fit: cover;" />
                        <h1 class="mt-3 mb-2" style="color: #388e3c;">Privacy Policy</h1>
                        <p class="lead" style="color: #555;">
                            Your trust is important to us. Here’s how we protect your information at Food Collection.
                        </p>
                    </div>
                    <hr />
                    <h4 class="mb-3" style="color: #43a047;">Information We Collect</h4>
                    <ul>
                        <li>Personal details (name, contact info) for booking pickups and appointments.</li>
                        <li>Food donation and collection records.</li>
                        <li>Website usage data to improve our services.</li>
                    </ul>
                    <h4 class="mt-4 mb-3" style="color: #43a047;">How We Use Your Information</h4>
                    <ul>
                        <li>To schedule and manage food pickups and appointments.</li>
                        <li>To communicate important updates and confirmations.</li>
                        <li>To enhance your experience and improve our services.</li>
                    </ul>
                    <h4 class="mt-4 mb-3" style="color: #43a047;">Your Privacy Rights</h4>
                    <ul>
                        <li>Access, update, or delete your personal information at any time.</li>
                        <li>Your data is never sold or shared with third parties without your consent.</li>
                        <li>All information is stored securely and handled with care.</li>
                    </ul>
                    <div class="alert alert-success mt-4" role="alert">
                        <strong>Questions?</strong> Contact us at <a href="mailto:privacy@foodcollection.org">privacy@foodcollection.org</a>.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>